<p id="notice"><%= notice %></p>

<h1>Businesses Near You</h1>

  <div class="row">
    <% @businesses.each do |business| %>
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h1><%= link_to business.name, business %>
                <% if business.verified? %>
                  <%= image_tag "badge-verified.png" %>
                <% end %>
            </h1>
          </div>
          <div class="panel-body">
            <p>Address: <%= business.street_address %><br />
            <%= business.city %>, <%= business.state %> <%= business.zip %></p>
            <h2>HOLO Score: </h2>
            <h3>Average User Rating: <%= business.average_rating %></h3>
            <h4>About <%= business.name %>: <%= business.description %></h4>
            <p>Created by: <%= business.user.username %></p>
        <%= link_to 'Show', business %> |
        <% if can? :update, business %>
          <%= link_to 'Edit', edit_business_path(business) %> | 
        <% end %>
        <% if can? :destroy, business %>
          <%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<br>

